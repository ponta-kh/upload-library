{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": false
    },
    "include": ["src"],
    "exclude": ["src/stories"]
}
